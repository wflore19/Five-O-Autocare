---
import "../css/base.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { client } from "../data/client";

export interface Props {
	title: string;
	seo_title?: string;
	seo_description?: string;
}

const { title, seo_title, seo_description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial scale=1.0" />

		<link rel="icon" type="image/svg+xml" href="/assets/favicon/favicon.ico" />

		<!-- <meta
			name="google-site-verification"
			content="5kW-E9pK9nMiQNkjwY6B-9kNyGIb0YwNDdpsNV32ZFk"
		/> -->
		<meta name="description" content={seo_description} />
		<meta name="keywords" content="" />

		<!--Social Media Display-->
		<meta property="og:title" content={seo_title} />
		<meta property="og:description" content={seo_description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={"https://" + client.domain} />
		<meta property="og:image" content="/images/social.webp" />
		<meta property="og:image:secure_url" content="/images/social.webp" />

		<!--Favicons-->
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/assets/favicons/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/assets/favicons/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/assets/favicons/favicon-16x16.png"
		/>
		<!-- <link rel="manifest" href="/assets/favicons/site.webmanifest" /> -->
		<meta name="msapplication-TileColor" content="#da532c" />
		<meta name="theme-color" content="#ffffff" />

		<!-- Preload -->
		<!-- <link rel="preload" as="image" href="/assets/logo-light.png" /> -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Hind+Madurai:wght@300;400;500;600;700&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Montserrat:wght@300;400;500;600;700;800;900&family=Open+Sans:wght@300;400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>

		<!-- Color Themes -->
		<!-- <link rel="stylesheet" href="/css/root.css" />
		<link rel="stylesheet" href="/css/dark.css" /> -->

		<link rel="preload" as="image" href="" />

		<!-- Loading in page specific CSS sheets from css block -->
		<!-- <link rel="stylesheet" href="../css/base.css" /> -->

		<!--Put analytics tag here at the bottom to prevent it from render blocking-->

		<!-- For home page, use full title, including location for SEO. Other pages should just include the page name -->
		{
			Astro.url.pathname === "/" ? (
				<title>
					{`${client.name} -
						${client.address.city}, ${client.address.state}`}
				</title>
			) : (
				<title>{title}</title>
			)
		}
		<meta name="generator" content={Astro.generator} />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
